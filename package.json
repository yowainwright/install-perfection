{
  "name": "install-perfection",
  "version": "0.1.0",
  "description": "Install dependencies with control ðŸ’–",
  "module": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "install-perfection": "dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rimraf dist config",
    "cmd:test": "ts-node src/program.ts --isTestingCLI",
    "cmd:test:quick": "rimraf tmp && mkdir tmp && ts-node src/program.ts --path ./__fixtures__/ --file test.all.package.json --dest ./tmp && rimraf tmp",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "lint": "eslint src --ext .ts",
    "lint-fix": "bun run lint --fix",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "prepublishOnly": "bun run test && bun run build",
    "release": "release-it",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "update": "codependence --update"
  },
  "dependencies": {
    "commander": "^9.5.0",
    "cosmiconfig": "^8.1.3",
    "execa": "^7.1.1",
    "gradient-string": "^2.0.2",
    "json5": "^2.2.3",
    "ora": "^6.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/gradient-string": "^1.1.2",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "bun-types": "^0.4.0",
    "codependence": "^0.2.6",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "release-it": "^15.10.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "tsup": "^6.7.0",
    "type-fest": "^3.8.0",
    "typescript": "^4.9.5",
    "vitest": "^0.29.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "references-empty": [
        1,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "refactor",
          "revert",
          "breaking"
        ]
      ]
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --cache --fix",
      "vitest related --run"
    ]
  },
  "release-it": {
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release v$npm_package_version"
    }
  },
  "keywords": [
    "npm-install",
    "install",
    "dependencies",
    "dependency-management",
    "dependency-deployment"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/install-perfection.git"
  },
  "bugs": {
    "url": "https://github.com/yowainwright/install-perfection/issues"
  },
  "author": {
    "name": "Jeff Wainwright",
    "email": "yowainwright@gmail.com",
    "url": "https://jeffry.in"
  }
}
