{
  "name": "install-perfection",
  "version": "0.1.0",
  "description": "Install dependencies with control ðŸ’–",
  "module": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "install-perfection": "dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rimraf dist config",
    "cmd:test": "ts-node src/program.ts --isTestingCLI",
    "cmd:test:quick": "rimraf tmp && mkdir tmp && ts-node src/program.ts --path ./__fixtures__/ --file test.all.package.json --dest ./tmp && rimraf tmp",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "lint": "eslint src --ext .ts",
    "lint-fix": "pnpm run lint --fix",
    "pre-commit": "lint-staged && pnpm run test",
    "prepare": "is-ci || is-docker || husky install",
    "prepublishOnly": "pnpm run test && pnpm run build",
    "release": "release-it",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "update": "codependence --update"
  },
  "dependencies": {
    "commander": "11.0.0",
    "cosmiconfig": "8.2.0",
    "execa": "^7.1.1",
    "gradient-string": "^2.0.2",
    "json5": "^2.2.3",
    "ora": "^6.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@types/gradient-string": "^1.1.2",
    "@types/node": "20.4.5",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.2.0",
    "pnpm-types": "^0.4.0",
    "codependence": "^0.2.6",
    "eslint": "8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "release-it": "16.1.3",
    "rimraf": "5.0.1",
    "ts-node": "^10.9.1",
    "tslib": "2.6.1",
    "tsup": "7.1.0",
    "type-fest": "4.0.0",
    "typescript": "5.1.6",
    "vitest": "^0.29.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "refactor",
          "revert",
          "breaking"
        ]
      ]
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --cache --fix"
    ]
  },
  "release-it": {
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release v$npm_package_version"
    }
  },
  "keywords": [
    "npm-install",
    "install",
    "dependencies",
    "dependency-management",
    "dependency-deployment"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/install-perfection.git"
  },
  "bugs": {
    "url": "https://github.com/yowainwright/install-perfection/issues"
  },
  "author": {
    "name": "Jeff Wainwright",
    "email": "yowainwright@gmail.com",
    "url": "https://jeffry.in"
  }
}
