{
  "name": "install-perfection",
  "version": "0.1.3",
  "description": "Install dependencies with control ðŸ’–",
  "module": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "install-perfection": "dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rimraf dist config",
    "cmd:test": "node --no-warnings --loader ts-node/esm src/program.ts --isTestingCLI",
    "cmd:test:quick": "rimraf tmp && mkdir tmp && node --no-warnings --loader ts-node/esm src/program.ts --path ./__fixtures__/ --file test.all.package.json --dest ./tmp && rimraf tmp",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "lint": "eslint src",
    "lint-fix": "pnpm run lint --fix",
    "pre-commit": "lint-staged && pnpm run test",
    "prepare": "is-ci || is-docker || husky install",
    "prepublishOnly": "pnpm run test && pnpm run build",
    "release": "release-it",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "update": "codependence --update"
  },
  "dependencies": {
    "@commitlint/format": "^19.3.0",
    "commander": "13.1.0",
    "cosmiconfig": "9.0.0",
    "execa": "^8.0.1",
    "gradient-string": "^3.0.0",
    "json5": "^2.2.3",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@types/gradient-string": "1.1.6",
    "@types/node": "22.10.7",
    "@typescript-eslint/eslint-plugin": "8.21.0",
    "@typescript-eslint/parser": "8.21.0",
    "codependence": "0.3.1",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "9.1.7",
    "is-ci": "^3.0.1",
    "lint-staged": "15.4.1",
    "prettier": "3.4.2",
    "release-it": "18.1.1",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "tsup": "8.3.5",
    "type-fest": "4.33.0",
    "typescript": "5.7.3",
    "typescript-eslint": "^7.8.0",
    "vitest": "^1.2.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "refactor",
          "revert",
          "breaking"
        ]
      ]
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --cache --fix"
    ]
  },
  "release-it": {
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release v$npm_package_version"
    }
  },
  "keywords": [
    "npm-install",
    "install",
    "dependencies",
    "dependency-management",
    "dependency-deployment"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/install-perfection.git"
  },
  "bugs": {
    "url": "https://github.com/yowainwright/install-perfection/issues"
  },
  "author": {
    "name": "Jeff Wainwright",
    "email": "yowainwright@gmail.com",
    "url": "https://jeffry.in"
  }
}
